{
  "__hint": "see https://github.com/rogerwang/node-webkit/wiki/Manifest-format",

  "name": "procgraph",
  "description": "Proc Graph plots resource usage of a single linux process.",
  "version": "0.2.0",
  "keywords": [ "graph", "process" ],
  "main": "index.html",
  "window": {
    "title":    "Proc Graph",
    "icon":     "resource/icon.png",
    "toolbar":   true,
    "frame":      true,
    "width":     1030,
    "height":     630,
    "position": "mouse",
    "min_width":  400,
    "min_height": 200
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sni/procgraph.git"
  },
  "chromium-args": "--disable-threaded-compositing"
}
